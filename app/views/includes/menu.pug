nav.navbar.navbar-default.navbar-static-top
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#nav__ul" aria-expanded="false")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(class=(menu === 'index')?'active':'', href='/') Free Polls  
    .collapse.navbar-collapse#nav__ul
      ul.nav.navbar-nav.navbar-right
        li.nav-item(class=(menu === 'index')?'active':'')
          a.nav-link(href="/") Home
        if (loggedIn === true)
          li.nav-item(class=(menu === 'formaddpoll')?'active':'')
            a.nav-link(href="/formaddpoll") Create Poll
          li.nav-item(class=(menu === 'mypolls')?'active':'')
            a.nav-link(href="/mypolls") My Polls
          li.dropdown
            a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
              span(id="display-name", class="profile-value") #{displayName}
              span.caret
            ul.dropdown-menu
              li
                a(href="/logout") Log out
        else
          li.nav-item
            a.nav-link(href='/auth/github') Log in with GitHub